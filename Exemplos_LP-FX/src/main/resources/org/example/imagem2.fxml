<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Imagem2Controller">
    <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="200" />
                <ColumnConstraints minWidth="200" />
                <ColumnConstraints minWidth="200" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>

            <!-- Sessão Animal -->
            <TitledPane expanded="true" text="Animal" GridPane.rowIndex="1">
                <VBox spacing="10">
                    <TextField fx:id="animalEspecie" promptText="Especie" />
                    <TextField fx:id="animalIdade" promptText="Idade" />
                    <TextField fx:id="animalPeso" promptText="Peso" />
                    <Button onAction="#criarAnimal" text="Criar Animal" />
                </VBox>
            </TitledPane>

            <!-- Sessão Imovel -->
            <TitledPane expanded="true" text="Imovel" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <VBox spacing="10">
                    <TextField fx:id="imovelTamanho" promptText="Tamanho" />
                    <TextField fx:id="imovelEndereco" promptText="Endereco" />
                    <TextField fx:id="imovelCor" promptText="Cor" />
                    <Button onAction="#criarImovel" text="Criar Imovel" />
                </VBox>
            </TitledPane>

            <!-- Sessão Veiculo -->
            <TitledPane expanded="true" text="Veiculo" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <VBox spacing="10">
                    <TextField fx:id="veiculoModelo" promptText="Modelo" />
                    <TextField fx:id="veiculoCor" promptText="Cor" />
                    <TextField fx:id="veiculoVelocidade" promptText="MaxVelocidade" />
                    <Button onAction="#criarVeiculo" text="Criar Veiculo" />
                </VBox>
            </TitledPane>
            <Button mnemonicParsing="false" onAction="#voltar" text="VOLTAR" GridPane.columnSpan="3">
                <padding>
                    <Insets bottom="3.0" left="15.0" right="15.0" top="3.0" />
                </padding>
            </Button>
            <padding>
                <Insets left="30.0" right="30.0" />
            </padding>
        </GridPane>
    </ScrollPane>
</HBox>
